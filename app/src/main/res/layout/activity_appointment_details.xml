<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg5"
    android:padding="24dp">

    <!-- Appointment Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Appointment Title"
        android:textStyle="bold"
        android:fontFamily="@font/amaranth"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Appointment Description -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Appointment Description"
        android:fontFamily="@font/amaranth"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Date & Time -->
    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date &amp; Time"
        android:fontFamily="@font/amaranth"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Hospital Name -->
    <TextView
        android:id="@+id/tvHospitalName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hospital Name"
        android:textStyle="bold"
        android:fontFamily="@font/amaranth"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Hospital Description -->
    <TextView
        android:id="@+id/tvHospitalDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hospital Description"
        android:fontFamily="@font/amaranth"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvHospitalName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Hospital Location -->
    <TextView
        android:id="@+id/tvHospitalLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lat, Lng"
        android:fontFamily="@font/amaranth"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@id/tvHospitalDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Go to Map Button -->
    <Button
        android:id="@+id/btnGoToMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Map"
        android:fontFamily="@font/amaranth"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_700"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvHospitalLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
